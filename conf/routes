
GET     /test                          controllers.TestViewController.onPageLoad()

GET     /join/:id                      controllers.GameController.waitingRoom(id)
GET     /start/:id                     controllers.GameController.startGame(id)
GET     /game                          controllers.GameController.game()

GET     /ws-wait                           controllers.GameController.socketWaitingRoom
GET     /ws-game                           controllers.GameController.socketGameRoom

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
